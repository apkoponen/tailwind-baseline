{
  "name": "tailwind-baseline",
  "version": "0.0.2",
  "description": "Tailwind CSS plugin for aligning text to baseline.",
  "license": "MIT",
  "repository": "apkoponen/tailwind-baseline",
  "main": "dist/index.js",
  "author": {
    "name": "Ari-Pekka koponen",
    "email": "ap.koponen+npm@gmail.com",
    "url": "https://github.com/apkoponen"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test": "jest",
    "coverage": "npm test -- --coverage",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "lint": "eslint .",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "babel src -d dist",
    "prerelease": "npm run lint && npm test && npm run build",
    "release": "standard-version",
    "postpublish": "git push origin master --follow-tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "tailwind",
    "basekick",
    "baseline",
    "typography"
  ],
  "dependencies": {
    "tailwindcss": "1.4.6"
  },
  "devDependencies": {
    "lodash": "4.17.15",
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "babel-eslint": "10.0.2",
    "babel-jest": "24.8.0",
    "eslint": "6.0.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "5.0.0",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "2.4.1",
    "jest": "24.8.0",
    "lint-staged": "8.2.1",
    "open-cli": "5.0.0",
    "prettier": "1.18.2",
    "rimraf": "2.6.3",
    "standard-version": "6.0.1"
  }
}
